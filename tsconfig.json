{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"],
        "lib": ["ESNext", "DOM"],
        "strictNullChecks": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}